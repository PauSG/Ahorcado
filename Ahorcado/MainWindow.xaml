<Window x:Class="Ahorcado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ahorcado"
        mc:Ignorable="d"
        Icon="assets/hangman.ico"
        Title="Ahorcado" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="BotonesMenu">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="LetrasButtonStyle" BasedOn="{StaticResource BotonesMenu}">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
        
    </Window.Resources>
   
    
    
    
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height=".3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="assets/0.jpg" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
            <Button Style="{StaticResource BotonesMenu}">Nueva Partida</Button>
            <Button Style="{StaticResource BotonesMenu}">Rendirse</Button>
        </StackPanel>
        <StackPanel Margin="0,10,0,0" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TextBlock FontSize="25" >Ahorcado</TextBlock>
            <Viewbox HorizontalAlignment="Left" Height="100">
                <TextBlock FontFamily="Blackadder ITC"> _ _ _ _ _</TextBlock>
            </Viewbox>
            <TextBox Margin="0,15"></TextBox>
            <!--<WrapPanel x:Name="LetrasWrappanel">
                <Button Style="{StaticResource LetrasButtonStyle}">A</Button>
                <Button Style="{StaticResource LetrasButtonStyle}">aaaa</Button>
                <Button Style="{StaticResource LetrasButtonStyle}">aaaa</Button>
            </WrapPanel>-->
        </StackPanel>






    </Grid>
</Window>
